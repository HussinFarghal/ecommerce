{
  "no-empty-function": "error",
  "no-empty-pattern": "error",
  "camelcase": "error",
  "curly": "error",
  "eqeqeq": "error",
  "no-console": "error",
  "no-debugger": "error",
  "no-else-return": "error",
  "no-var": "error",
  "no-use-before-define": [
    "error",
    {
      "functions": false
    }
  ],
  "printWidth": 140,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "all",
  "arrow-spacing": [
    "error",
    {
      "before": false,
      "after": false
    }
  ],
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "semi": true,
  "useTabs": false,
  "vueIndentScriptAndStyle": false,
  "commaSpacing": {
    "before": false,
    "after": true
  },
  "max-len": [
    "error",
    {
      "code": 140
    }
  ],
  "space-infix-ops": "error",
  "space-unary-ops": "error",
  "template-curly-spacing": [
    "error",
    "always"
  ],
  "object-curly-spacing": [
    "error",
    "always"
  ],
  "newline-before-return": "error",
  "newline-per-chained-call": [
    "error",
    {
      "ignoreChainWithDepth": 1
    }
  ],
  "no-multiple-empty-lines": [
    "error",
    {
      "max": 1,
      "maxEOF": 1
    }
  ],
  "no-trailing-spaces": "error",
  "no-unneeded-ternary": "error",
  "prefer-arrow-callback": "error",
  "prefer-const": "error",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "semi": true,
        "useTabs": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular"
      }
    }
  ]
}
